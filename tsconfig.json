{
  "compilerOptions": {
    "lib": ["dom", "dom.Iterable", "esnext"],           
    "jsx": "react-jsx",                                                
    "moduleResolution": "node",                                
    "resolveJsonModule": true,                 
    "allowJs": true,                   
    "noEmit": true,      
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,                
    "esModuleInterop": true,                               
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
